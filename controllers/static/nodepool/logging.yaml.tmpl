version: 1
formatters:
  normal:
    format: "%(asctime)s %(levelname)s %(name)s: %(message)s"
  console:
    format: "%(levelname)7s %(name)s: %(message)s"
handlers:
  console:
    class: logging.StreamHandler
    formatter: console
    level: {{.LogLevel}}
    stream: ext://sys.stdout
loggers:
  nodepool:
    handlers:
      - console
    level: {{.LogLevel}}
    propagate: 0
root:
  handlers:
    - console
  level: {{.LogLevel}}
